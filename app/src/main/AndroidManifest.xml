<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iasmimc.myapplication" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name=".Screen.ConvidadosAdd"
            android:label="@string/title_activity_convidados_add"
            android:noHistory="true"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".Screen.ListConvActivity"
            android:icon="@drawable/noivos2"
           >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Screen.Configuracao"
            android:label="@string/title_activity_configuracao" >
        </activity>

        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>


        <activity
            android:name=".Screen.AddDebito"
            android:label="@string/title_activity_add_debito"
            android:noHistory="true"
            android:launchMode="singleInstance">
        </activity>

    </application>

</manifest>
