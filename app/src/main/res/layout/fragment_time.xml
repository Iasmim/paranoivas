
<GridLayout     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"

        android:orientation="horizontal"
        android:gravity="center"   >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faltam"
            android:textStyle="bold"
            android:textSize="60dp"/>
        </LinearLayout>

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:gravity="center"   >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/diasFaltam"
        android:textStyle="bold"
        android:textSize="80dp"/>

</LinearLayout>
    <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"

    android:orientation="horizontal"
    android:gravity="center"   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Dias"
        android:textStyle="bold"
        android:textSize="20dp"
        />

</LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="80px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Para o grande dia!"
            android:textStyle="bold"
            android:textSize="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center">
     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="fill_parent"
         android:src="@drawable/noiva"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_action_heart"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/noivo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Noiva"
            android:textSize="20dp"
            android:layout_marginRight="50dp"
            android:id="@+id/nomeNoivahome"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/nomeNoivohome"/>
    </LinearLayout>
</GridLayout>